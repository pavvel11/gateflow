# ============================================
# GateFlow Full Stack Environment Variables
# ============================================
# Copy this file to .env.fullstack and fill in your production values
# SECURITY: Never commit .env.fullstack to version control!
#
# This is for docker-compose.fullstack.yml (self-hosted Supabase)

# ============================================
# PORTS (Optional - defaults will be used if not set)
# ============================================
POSTGRES_PORT=5432
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
ADMIN_PORT=3000
NGINX_PORT=8080

# ============================================
# DATABASE
# ============================================
# Strong password for PostgreSQL (use a password generator)
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ============================================
# JWT & AUTH
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# Generate with: openssl rand -base64 32
REALTIME_SECRET_KEY_BASE=your_realtime_secret_key_base_here

# Supabase Keys (generated when you create a Supabase project)
ANON_KEY=your_supabase_anon_key_here
SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# SUPABASE URLS
# ============================================
# Your production domain
API_EXTERNAL_URL=https://api.yourdomain.com
NEXT_PUBLIC_SUPABASE_URL=https://api.yourdomain.com

# Site URL (admin panel)
GOTRUE_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
MAIN_DOMAIN=yourdomain.com

# Allowed redirect URLs (comma-separated)
GOTRUE_URI_ALLOW_LIST=https://yourdomain.com/*,https://www.yourdomain.com/*

# ============================================
# SMTP (Email) Configuration
# ============================================
# For production, use a real SMTP service (e.g., SendGrid, AWS SES, Mailgun)
SMTP_ADMIN_EMAIL=noreply@yourdomain.com
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_SENDER_NAME=GateFlow

# ============================================
# STRIPE (Payment Processing)
# ============================================
# Get from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Webhook secret (from Stripe webhook configuration)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================
# CLOUDFLARE TURNSTILE (CAPTCHA)
# ============================================
# Get from https://dash.cloudflare.com/
NEXT_PUBLIC_CLOUDFLARE_TURNSTILE_SITE_KEY=your_turnstile_site_key
CLOUDFLARE_TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# ============================================
# OPTIONAL: SSL/TLS Configuration
# ============================================
# If using custom SSL certificates, uncomment and set paths
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
